<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:padding="10dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/hello_world_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/birthday_card_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Birthday Card"
        app:layout_constraintStart_toEndOf="@+id/hello_world_btn"
        app:layout_constraintTop_toTopOf="@+id/hello_world_btn" />

    <Button
        android:id="@+id/test2_dice_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="骰子"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hello_world_btn" />

    <Button
        android:id="@+id/tip_time_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小费计算器"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/test2_dice_btn"
        app:layout_constraintTop_toTopOf="@+id/test2_dice_btn" />

    <Button
        android:id="@+id/affirmation_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Affirmation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test2_dice_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>